<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="taskIT2.MainWindow"
        Title="Геометрические фигуры" Width="600" Height="500"
        Background="#F0F0F0">

    <StackPanel Margin="20">
        <TextBlock Text="Выберите фигуру:" FontSize="18" FontWeight="Bold" Foreground="#333333"/>
        <ComboBox x:Name="ShapeSelector">
            <ComboBoxItem Content="Точка"/>
            <ComboBoxItem Content="Линия"/>
            <ComboBoxItem Content="Многоугольник"/>
            <ComboBoxItem Content="Эллипс"/>
        </ComboBox>

        <TextBlock Text="Координаты:" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,10,0,5"/>
        <TextBox x:Name="InputX" Watermark="X-координата"/>
        <TextBox x:Name="InputY" Watermark="Y-координата"/>

        <Button Name="AddButton" Content="Добавить" Click="OnAddButtonClick"
                Width="120" Margin="10" Background="#4CAF50" Foreground="White"/>

        <TextBlock Text="Содержимое:" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,10,0,5"/>
        <TextBlock x:Name="ShapeContent" FontSize="16" Foreground="#000000"/>

        <Canvas x:Name="DrawingCanvas" Width="500" Height="300" Background="White" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
